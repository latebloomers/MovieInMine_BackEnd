<!--    </insert>-->

    <!-- 게시글 전체 조회 -->
    <select id="selectArticle"
            resultType="ArticleDto"
            resultMap="articleRM"
    >
        select id, user_id, title, content, created_at
        from article
        order by id desc
    </select>

